    <div class="indextabnav">
        <h3 class="navtitle"><span class="b">香凝服务</span><span class="f12 g9 pl10">The Main Service</span></h3>
    </div>
    <div class="godstabcent">
        <article id="navslider">

            <div class="bd">
                <ul id="sliderPic">
                    <li onclick="goUrl('/XNProducts/GYLP')"><img src="~/bg/nav_gylp.png" /></li>
                    <li onclick="goUrl('/Products/Index')"><img src="~/bg/nav_jpjj.png" /></li>
                    <li onclick="goUrl('/XNProducts/ZWDZ')"><img src="~/bg/nav_zwdz.png" /></li>
                    <li onclick="goUrl('/XNProducts/JJWX')"><img src="~/bg/nav_jjwx.png" /></li>
                </ul>
            </div>
            <div class="hd"><ul></ul></div>
        </article>
        <script type="text/javascript">
            TouchSlide({
                slideCell: "#navslider",
                titCell: ".hd ul",
                mainCell: ".bd ul",
                effect: "leftLoop",
                defaultIndex:"1",
                autoPage: true,//自动分页
                autoPlay: false,  //自动播放
