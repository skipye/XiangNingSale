
@{
    ViewBag.Title = "首页";
}

<header id="header" class="headerindex">
    <div class="disbox aubgslogo"></div>
    <div class="formalsosbox sosbg por">
        <input name="productSearch" type="text" class="intext f12" id="IndexformalSearchTxt" placeholder="请输入关键字">
        <span class="formalindexbtn f14 poa" id="formalbtn">搜索</span>
    </div>
</header>


<article class="godsconslider" id="godsconslider">
    <div class="bd">
        <ul id="sliderPic">
            <li onclick="goUrl('/XNAbout/QYLN')"><img src="~/images/b1.jpg" /></li>
        </ul>
    </div>
    <div class="hd"><ul></ul></div>
</article>
<script type="text/javascript">
    TouchSlide({
        slideCell: "#godsconslider",
        titCell: ".hd ul",
        mainCell: ".bd ul",
        effect: "leftLoop",
        autoPage: true,//自动分页
        autoPlay: $('#godsconslider .bd li').length > 1 ? true : false  //自动播放
    });
</script>


<script type="text/javascript">
    // 搜所按钮点击事件
    $('#formalbtn').click(function () {
        var serString = $("#IndexformalSearchTxt").val();
        //var tmn = returnTmnNo();
        if (serString == '') {
            UsTips("请输入搜索关键字", 15500);
            return false;
        }
        var sosurl = '/Products/Search?keyWord=' + serString;

        goUrl(sosurl);
    });
</script>

<div class="indexnavlist listactive ovh">
        <ul class="pt20">
            <li class="n5"><em class="icem ic01"></em><span class="texp f12">正规厂家品质保证</span></li>
